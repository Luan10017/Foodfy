<div class="item">
    <div class="title">Fotos</div>
    <div id="photos-manager">
        <div id="photos-upload">
            <input 
                id="photos-input"
                type="file"
                name="photos"
                multiple
                accept="image/*"
                onchange="PhotosUpload.handleFileInput(event)"
            >
            <i class="material-icons">add</i>
        </div>
        <div id="photos-preview">
            {% if files %}
                {% for image in files %}
                    <div class="photo" id="{{image.id}}">
                        <img src="{{image.src}}" alt="{{image.name}}">
                        <i class="material-icons"
                            onclick="PhotosUpload.removeOldPhoto(event)"
                        >close</i>
                    </div>
                {% endfor %}
                <input type="hidden" name="removed_files">
            {% endif %}
        </div>
    </div>
</div>
<div class="item">
    <div class="title">Título</div>
    <div>
        <input type="text" name="title" value="{{recipe.title}}">
    </div>
</div>
<div class="item">
<div class="title">Chef</div>
    <div>
        <select name="chef">
            {% for chef in chefOptions %}
            <option value="{{chef.id}}" {% if recipe.chef_id == chef.id %}selected{%endif%}>
                {{chef.name}}
            </option>
            {% endfor %}
        </select>
    </div>
</div>
<div class="item">
    <div class="title">Ingredientes</div>
    <div id="ingredients">
        <div class="ingredient">
            {% if recipe.ingredients %}
                {% for ingrediente in recipe.ingredients %}
                    <input type="text" name="ingredients[]" value="{{ingrediente}}">
                {% endfor %}
            {%else%}
                <input type="text" name="ingredients[]" placeholder="Ingredientes">
            {% endif %}
        </div>
    </div>
    <a class="add-button ingredients">Adicionar novo ingrediente</a>
</div>
<div class="item">
    <div class="title">Modo de preparo</div>
    <div id="steps">
        <div class="step">
            {% if recipe.preparation %}
                {% for step in recipe.preparation %}
                    <input type="text" name="preparation[]" value="{{step}}">
                {% endfor %}
            {%else%}
                <input type="text" name="preparation[]" placeholder="Modode preparo">
            {% endif %}
        </div>
    </div>
    <a class="add-button steps">Adicionar novo passo</a>
</div>
<div class="item">
    <div class="title">informações adicionais</div>
    <div>
        <textarea name="information">{{recipe.information}}</textarea>
    </div>
</div>
