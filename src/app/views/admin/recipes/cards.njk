<section class="cards_admin">
    {%for recipe in recipes%}
        <div class="card_admin" id="{{recipe.id}}">
            <img src="{{files[loop.index0].src}}" alt="{{files[loop.index0].name}}">
            <div class="card_container">
                <h4>{{recipe.title}}</h4>
                <p class="card__author">por {{recipe.chef_name}}</p>
                <a class="visualization_button" onclick="pageRedirector.cardsAdmin(event,{{recipe.id}})">Visualizar</a>
            </div>
        </div>
    {% endfor %}
</section>