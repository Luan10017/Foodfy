{% extends "layouts/admin.njk" %}

{%block contentAdmin%}
    <form class="chef_details" method="post" action="/admin/chefs">
        <div class="chef_info">
            <h1>Criando chefe</h1>
            <button type="submit">Salvar Chef</button>
        </div>
        <main>
            <div class="item">
                <div>Nome</div>
                <div>
                    <input 
                        type="text" 
                        name="name" 
                        placeholder="Nome do chef"
                    >
                </div>
            </div>
            <div class="item">
                <div>Avatar</div>
                <div>
                    <input 
                        type="URL" 
                        name="avatar_url" 
                        placeholder="http://"
                    >
                </div>
            </div>
        </main>
    </form>

{%endblock%}
