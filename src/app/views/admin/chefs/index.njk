{% extends "layouts/admin.njk" %}

{%block contentAdmin%}
    <h1>Gerenciar chefs</h1>
    <section class="chefs">
        {%for chef in chefs%}
            <div class="chef">
               <img src="{{chef.avatar_url}}" alt="{{chef.name}}">
               <div class="chef_content">
                    <h1>{{chef.name}}</h1>
                    <a class="visualization_button">Visualizar</a>
               </div>
            </div>
        {% endfor %}
    </section>
{%endblock%}