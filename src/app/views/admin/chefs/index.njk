{% extends "layouts/admin.njk" %}

{%block contentAdmin%}
    <h1>Gerenciar chefs</h1>
    <section class="chefs">
        {%for chef in chefs%}
            <div class="chef" id={{chef.id}}>
               <div class="chef_content">
                    {% if files %}
                        <img src="{{files[0].src}}" alt="Foto de {{files.name}}">
                    {% else %}
                        <img src="{{chef.avatar_url}}" alt="{{chef.name}}">
                    {% endif %}
                    <h1>{{chef.name}}</h1>
                    <a class="visualization_button">Visualizar</a>
               </div>
            </div>
        {% endfor %}
    </section>
    <script>
        const chefs = document.querySelectorAll('.chef')

        for (let chef of chefs) {
            chef.addEventListener("click", function() {
                const chefId = chef.getAttribute("id")
                window.location.href = `/admin/chefs/${chefId}`
            })
        }

    </script>
{%endblock%}