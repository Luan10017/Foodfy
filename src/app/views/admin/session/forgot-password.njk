{% extends "admin/session/layout.njk" %}

{%block contentSessionAdmin%}
    
    <form method="post" action="/admin/users/forgot-password">
            
            <div class="header">
                <h3>Esqueceu a Senha?</h3>
            </div>
            <div class="fields">
                <div class="item">
                    <div>Email</div>
                    <div class="input">
                        <input 
                            type="email" 
                            name="email" 
                            placeholder="Digite seu email"
                            value="{{user.email}}"
                            onblur="Validate.apply(this, 'isEmail')"
                        >
                    </div>
                </div>
            
            <div class="footer">
                <button class="button reset" type="submit">Recuperar</button>
            </div>
        </form>
{%endblock%}
