<div class="item">
    <div>Nome Completo</div>
        <div class="input">
        <input 
        type="text" 
        name="name" 
        placeholder="Digite seu nome completo"
        value="{{user.name}}"
        required
        >
    </div>
</div>
<div class="item">
    <div>Email</div>
    <div class="input">
        <input 
            type="email" 
            name="email" 
            placeholder="Digite seu email"
            value="{{user.email}}"
            onblur="Validate.apply(this, 'isEmail')"
        >
    </div>
</div>