{% extends "admin/layout.njk" %}

{%block contentAdmin%}
    <div class="user-header">
        <h1 class="show-title">Usu√°rios</h1>
        <a class="button" href="/admin/users/register">Novo</a>
    </div>
    <section class="user-list">
        {% for user in users %}
            <div class="user">
                <h3>{{user.name}}</h3>
                <p>{{user.email}}</p>
                <div class="actions">
                    <a href= "/admin/users/{{user.id}}/edit">Editar</a>
                    <form id="user-delete" action="/admin/users?_method=DELETE" method="post">
                        <input type="hidden" name="id" value={{user.id}}>
                        <button class="button delete" type="submit" onclick="deleteConfirmation.user(event)">Deletar</button>
                    </form>
                </div>
            </div>
        {% endfor %}
    </section>
{%endblock%}