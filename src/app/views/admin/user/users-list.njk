{% extends "admin/layout.njk" %}

{%block contentAdmin%}
    <div class="user-header">
        <h1 class="show-title">Usu√°rios</h1>
        <form class="logout" action="/users/logout" method="POST">
                <button class="button">Novo</button>
        </form>
    </div>
    <section class="user-list">
        {% for user in users %}
            <div class="user">
                <h3>{{user.name}}</h3>
                <p>{{user.email}}</p>
                <div class="actions">
                    <a href="">Editar</a>
                    <form action="/admin/users?_method=DELETE" method="post">
                        <input type="hidden" name="id" value={{user.id}}>
                        <button class="button delete" type="submit">Deletar</button>
                    </form>
                </div>
            </div>
        {% endfor %}
    </section>
    
{%endblock%}