{% extends "layouts/public.njk" %}

{%block content%}
    <section class="chefs">
        {%for chef in chefs%}
            <div class="chef">
               <img src="{{chef.avatar_url}}" alt="{{chef.name}}">
               <div class="chef_content">
                    <h1>{{chef.name}}</h1>
                    <p>{{chef.total_recipes}} receitas</p>
               </div>
            </div>
        {% endfor %}
    </section>
{%endblock%}