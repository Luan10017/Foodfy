<main>
        <div class="item">
            <div>Avatar URL</div>
                <div>
                    <input 
                        type="URL" 
                        name="image_url" 
                        value="{{recipes.image_url}}"
                    >
                </div>
        </div>  
        <div class="item">
            <div>Ingredientes</div>
                <div id="ingredients">
                    <div class="ingredient">
                        <input 
                            type="text" 
                            name="ingredientes[]" 
                            value="{{recipes.ingredientes}}"
                        >
                    </div>
                </div>
                <a class="add-button ingredients">Adicionar novo ingrediente</a>
        </div>  
        <div class="item">
            <div>Modo de preparo</div>
                <div id="steps">
                    <div class="step">
                        <input 
                            type="text" 
                            name="preparation[]" 
                            value="{{recipes.preparation}}"
                        >
                    </div>
                </div>
            <a class="add-button steps">Adicionar novo passo</a>
        </div>  
        <div class="item">
            <div>informações adicionais</div>
                <div>
                    <input 
                        type="text" 
                        name="additional-Information" 
                        value="{{recipes.additional-Information}}"
                    >
                </div>
        </div>    
        </main>